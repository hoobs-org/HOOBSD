{
    "name": "@hoobs/hoobsd",
    "version": "4.0.1",
    "description": "Server component for the certified HOOBS smart home stack.",
    "license": "GPL-3.0",
    "keywords": [
        "hoobs",
        "hoobsd",
        "homebridge",
        "smart-home",
        "smarthome",
        "home",
        "iot"
    ],
    "repository": {
        "type": "git",
        "url": "git://github.com/hoobs-org/hoobsd.git"
    },
    "bugs": {
        "url": "https://github.com/hoobs-org/hoobsd/issues"
    },
    "main": "lib/cli.js",
    "bin": {
        "hoobsd": "bin/hoobsd"
    },
    "author": {
        "name": "Michael J Kellsy"
    },
    "engines": {
        "node": ">=10.17.0"
    },
    "preferGlobal": true,
    "scripts": {
        "build": "bin/build --lint --pack",
        "lint": "eslint 'src/**/*.ts'",
        "api": "sudo nodemon --watch src --ext ts --exec 'bin/build && clear && bin/hoobsd --mode development --debug api'",
        "default": "sudo nodemon --watch src --ext ts --delay 5 --exec 'clear && bin/hoobsd --mode development --debug -i default'"
    },
    "dependencies": {
        "archiver": "^5.0.2",
        "axios": "^0.21.0",
        "body-parser": "^1.19.0",
        "chalk": "^4.1.0",
        "chokidar": "^3.4.3",
        "commander": "^6.1.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "formidable": "^1.2.2",
        "fs-extra": "^9.0.1",
        "homebridge": "1.1.6",
        "http-terminator": "^2.0.3",
        "lodash": "^4.17.20",
        "macaddress": "^0.5.1",
        "node-cache": "^5.1.2",
        "node-ipc": "^9.1.1",
        "node-pty": "^0.9.0",
        "node-uname": "^3.0.4",
        "sanitize-filename": "^1.6.3",
        "socket.io": "^2.3.0",
        "source-map-support": "^0.5.19",
        "systeminformation": "^4.27.11",
        "unzipper": "^0.10.11",
        "ws": "^7.3.1"
    },
    "devDependencies": {
        "@tsconfig/node10": "^1.0.7",
        "@types/archiver": "^3.1.0",
        "@types/commander": "^2.12.2",
        "@types/cors": "^2.8.7",
        "@types/debug": "^4.1.5",
        "@types/express": "^4.17.8",
        "@types/formidable": "^1.0.31",
        "@types/fs-extra": "^9.0.1",
        "@types/http-terminator": "^2.0.1",
        "@types/lodash": "^4.14.161",
        "@types/node": "^14.11.1",
        "@types/node-ipc": "^9.1.3",
        "@types/node-persist": "^3.1.0",
        "@types/prompts": "^2.0.9",
        "@types/socket.io": "^2.1.11",
        "@types/unzipper": "^0.10.3",
        "@types/ws": "^7.2.6",
        "@typescript-eslint/eslint-plugin": "^4.1.1",
        "@typescript-eslint/parser": "^4.0.1",
        "eslint": "^7.8.1",
        "eslint-config-airbnb-typescript": "^10.0.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jsx-a11y": "^6.3.1",
        "eslint-plugin-react": "^7.20.6",
        "eslint-plugin-react-hooks": "^4.1.2",
        "nodemon": "^2.0.6",
        "prompts": "^2.3.2",
        "rimraf": "^3.0.2",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.2"
    }
}
