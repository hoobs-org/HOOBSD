const Program = require("commander");
const Prompt = require("prompts");
const { existsSync, mkdirSync, readFileSync } = require("fs-extra");
const { join } = require("path");
const { execSync } = require("child_process");

const root = join(__dirname, "../");
const pjson = JSON.parse(readFileSync(join(root, "package.json")).toString());

Program.version(pjson.version, "-v, --version", "output the current version")
    .allowUnknownOption();

Program.command("server", { isDefault: true })
    .description("build hoobs server")
    .option("-l, --lint", "lint the code before building")
    .option("-p, --pack", "create pack file for offline testing")
    .action((command) => {
        if (command.lint) execSync(`${join(root, "node_modules", ".bin", "eslint")} 'src/**/*.ts'`, { cwd: root, stdio: "inherit" });
        if (!existsSync(join(root, "lib"))) mkdirSync(join(root, "lib"));

        execSync(`${join(root, "node_modules", ".bin", "rimraf")} ${join(root, "lib")}`, { cwd: root, stdio: "inherit" });
        execSync(`${join(root, "node_modules", ".bin", "tsc")}`, { cwd: root, stdio: "inherit" });

        if (command.pack) {
            execSync("yarn pack", { cwd: root, stdio: "inherit" });
            execSync(`mv ${join(root, `hoobs-hoobsd-v${pjson.version}.tgz`)} ${join(root, "lib", "package.tgz")}`, { cwd: root, stdio: "inherit" });
            execSync(`chmod 755 ${join(root, "lib", "package.tgz")}`, { cwd: root, stdio: "inherit" });
        }
    });

Program.command("publish")
    .description("publish the server to npm")
    .action(() => {
        const questions = [
            {
                type: "text",
                name: "confirm",
                initial: "no",
                message: "type yes to confirm",
                format: (value) => value.toLowerCase(),
            },
        ];

        Prompt(questions).then((result) => {
            if (result && result.confirm === "yes") {
                execSync(`${join(root, "bin", "build")} server`, { cwd: root, stdio: ["inherit", "inherit", "inherit"] });
                execSync("yarn publish --access public", { cwd: root, stdio: ["inherit", "inherit", "inherit"] });
            }
        });
    });

Program.parse(process.argv);
