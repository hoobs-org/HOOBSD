ARGUMENTS=""
BUILD="false"
USER=$(whoami)

while [ "$1" != "" ]; do
    case $1 in
        build ) BUILD="true"
                ;;

        * )     ARGUMENTS="$ARGUMENTS $1"
                ;;
    esac

    shift
done

if [[ "$BUILD" = "true" ]]; then
    sudo ./node_modules/.bin/nodemon --watch src --ext ts --signal SIGINT --exec "sudo -u $USER bin/build && clear && bin/hoobsd --mode development$ARGUMENTS"
else
    sudo ./node_modules/.bin/nodemon --watch src --ext ts --delay 5 --signal SIGINT --exec "clear && bin/hoobsd --mode development$ARGUMENTS"
fi
